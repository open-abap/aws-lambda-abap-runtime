{
  "global": {
    "files": "/src/*.*",
    "skipGeneratedGatewayClasses": true,
    "skipGeneratedPersistentClasses": true,
    "skipGeneratedFunctionGroups": true
  },
  "syntax": {
    "version": "v702",
    "errorNamespace": "."
  },
  "rules": {
    "when_others_last": true,
    "avoid_use": {
      "define": true,
      "execSQL": true,
      "kernelCall": true,
      "communication": true,
      "systemCall": true,
      "break": true,
      "statics": true
    },
    "parser_error": true,
    "unknown_types": true,
    "check_syntax": true,
    "functional_writing": true,
    "obsolete_statement": {
      "refresh": true,
      "compute": true,
      "requested": true,
      "setExtended": true,
      "occurs": true
    }
  }
}